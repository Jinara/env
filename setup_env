set list
set listchars=eol:Â·
set novisualbell

filetype plugin indent on
colorscheme desert
execute pathogen#infect()
command Nospace %s/\s\+$//g
au BufEnter *.rb :let g:AutoPairs['|'] = '|'

" > ~/.vimrc

